{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [ "src" ],
  "exclude": [ "*.test.*" ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "esnext" ],
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "experimentalDecorators": true
  }
}
