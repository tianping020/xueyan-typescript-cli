{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [ "src" ],
  "exclude": [ "*.test.*" ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [ "dom", "esnext" ],
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "<%= package.name %>": ["../src"],
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"]
    }
  }
}
